<h2>Log In</h2>
<br><br><br>
<body class="universal">


<%= form_tag login_path do %>

<div class="form">
    <%= email_field_tag :email, nil, :type => "text", :id => "email", :class => "form__input"%>
    <%= label_tag :email, nil, :for => "email", :class => "form__label"  %>
</div>

<br>

<div class="form">
    <%= password_field_tag :password, nil, :type => "text", :id => "email", :class => "form__input" %>
    <%= label_tag :password, nil, :for => "password", :class => "form__label" %>
</div>

<br>

<div class="btn-new">
<%= submit_tag "Sign in!" %>
</div>

<% end %>

<br>

<div class="btn-new">
    <%= label_tag :remember_me, "Keep me logged in!" %>
    <br>
    <%= check_box_tag :password, 1, params[:remember_me] %>
</div>

<br>

<h4>Reset password</h4>

<h5 class="body">
    <%= link_to "Forgot your password?", new_password_reset_url %>
</h5>

<br><br><br><br>

</body>