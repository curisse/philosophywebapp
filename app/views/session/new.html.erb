<h2>Log In</h2>

<h2 class="body">

<%= form_tag login_path do%>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
<br>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
<br>
<%= submit_tag "Sign in!" %>

<% end %>

<br>
    <%= label_tag :remember_me, "Keep me logged in!" %>
    <%= check_box_tag :password, 1, params[:remember_me] %>
<br>
    
    
</h2>

<br><br><br>

<h2>Reset password</h2>
<h3 class="body">
<%= link_to "Forgot your password?", new_password_reset_url %>
</h3>

